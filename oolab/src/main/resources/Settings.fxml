<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" minHeight="550.0" minWidth="850.0" stylesheets="Settings.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.SettingsPresenter">

    <top>
        <Label fx:id="errorInfo" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox alignment="CENTER">
            <TextField fx:id="mapHeight" alignment="CENTER" promptText="Map Height" style="-fx-max-width: 250;" styleClass="text-field" text="30" />
            <TextField fx:id="mapWidth" alignment="CENTER" promptText="Map Width" style="-fx-max-width: 250;" styleClass="text-field" text="30" />
            <ChoiceBox fx:id="mapVariant" style="-fx-max-width: 250;" />
            <TextField fx:id="initNumOfPlants" alignment="CENTER" promptText="Initial number of plants" style="-fx-max-width: 250;" styleClass="text-field" text="100" />
            <TextField fx:id="initNumOfAnimals" alignment="CENTER" promptText="Initial number of animals" style="-fx-max-width: 250;" styleClass="text-field" text="50" />
            <TextField fx:id="initEnergy" alignment="CENTER" promptText="Initial number of energy for the animal" style="-fx-max-width: 250;" styleClass="text-field" text="25" />
            <TextField fx:id="numOfPlantsEachDay" alignment="CENTER" promptText="Number of plants grown each day" style="-fx-max-width: 250;" styleClass="text-field" text="20" />
            <TextField fx:id="energyGainOnEat" alignment="CENTER" promptText="Energy gain after eating plant" style="-fx-max-width: 250;" styleClass="text-field" text="10" />
            <TextField fx:id="energyNeededToReproduce" alignment="CENTER" promptText="Energy needed to reproduce" style="-fx-max-width: 250;" styleClass="text-field" text="1" />
            <TextField fx:id="energyLossDuringReproduction" alignment="CENTER" promptText="Energy loss after reproduction" style="-fx-max-width: 250;" styleClass="text-field" text="1" />
            <TextField fx:id="minMutations" alignment="CENTER" promptText="Minimum number of Mutations" style="-fx-max-width: 250;" styleClass="text-field" text="1" />
            <TextField fx:id="maxMutations" alignment="CENTER" promptText="Maximum number of Mutations" style="-fx-max-width: 250;" styleClass="text-field" text="10" />
            <ChoiceBox fx:id="mutationVariant" style="-fx-max-width: 250;" />
            <TextField fx:id="genomLength" alignment="CENTER" promptText="Length of genome" style="-fx-max-width: 250;" styleClass="text-field" text="10" />
        </VBox>
    </center>

    <bottom>
        <Button fx:id="start" alignment="CENTER" onAction="#startTheSim" text="GO!" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin></Button>
    </bottom>

</BorderPane>
