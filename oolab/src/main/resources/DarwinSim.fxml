<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" minHeight="550.0" minWidth="850.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.DarwinPresenter">

    <top>
        <Label fx:id="pausedInfo" BorderPane.alignment="CENTER"></Label>
    </top>

    <center>
        <VBox alignment="CENTER">
            <Label fx:id="dayLabel" textAlignment="CENTER" />
            <HBox alignment="CENTER">
                <GridPane fx:id="mapGrid" gridLinesVisible="true" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Button fx:id="pauseResumeButton" onAction="#handlePauseResumeRequest" text="Pauza" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin></Button>
    </bottom>



</BorderPane>
